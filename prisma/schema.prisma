generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  password          String?
  firstName         String?
  lastName          String?
  mobileNo          String?
  gender            Gender?
  currency          Currency            @default(RUPEE)
  transactions      Transaction[]
  assetsLiabilities AssetLiability[]

  @@index([email])
  @@index([mobileNo])
}

model Transaction {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  amount     Decimal
  type       TransactionType
  description String?
  date       DateTime @default(now())

  @@index([userId])
  @@index([categoryId])
  @@index([date])
}

model Category {
  id          String   @id @default(uuid())
  name        String
  type        TransactionType
  transactions Transaction[]
}

model AssetLiability {
  id         String                  @id @default(uuid())
  user       User                    @relation(fields: [userId], references: [id])
  userId     String
  name       String
  type       FinancialType
  value      Decimal
  categoryId String
  category   AssetLiabilityCategory  @relation(fields: [categoryId], references: [id])
  createdAt  DateTime          @default(now())

  @@index([userId])
  @@index([categoryId])
  @@index([createdAt])
}

model AssetLiabilityCategory {
  id     String        @id @default(uuid())
  name   String
  type   FinancialType
  assets AssetLiability[]
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum FinancialType {
  ASSET
  LIABILITY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

